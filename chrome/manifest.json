{
  "name": "Turnstyles for turntable.fm",
  "version": "4.1",
  "description": "Applies styles and tweaks to turntable.fm - autobop (auto-awesome) and dark chat, with more coming soon!",
  "manifest_version": 3,
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [ "storage" ],
  "content_scripts": [
    {
      "exclude_globs": [
        "*://turntable.fm/",
        "*://turntable.fm/lobby",
        "*://turntable.fm/about",
        "*://turntable.fm/jobs",
        "*://turntable.fm/privacy",
        "*://turntable.fm/copyright",
        "*://turntable.fm/terms",
        "*://turntable.fm/static/*"
      ],
      "js": [
        "tweaks/Options.js",
        "tweaks/AutoBop.js",
        "tweaks/Theming.js"
      ],
      "matches": [ "*://turntable.fm/*" ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [ "themes/*" ]
}